# PATH is set in .zshenv rather than .zshrc so that
# it is used by both interactive and non-interactive
# shells

# On some systems (macOS, Arch), the PATH should be set
# elsewhere. On macOS, the path_helper utility does it.

# These load in reverse order, from bottom to top
if [[ "$(uname -s)" =~ "Darwin" ]]; then
  typeset paths

  paths=($PWD/node_modules/bin
        $HOME/.n/bin
        $DOTFILES/bin)

  for p in ${paths}
  do
    export PATH=$p:$PATH
  done

  unset paths
fi
